{
  "version": "4.1.3",
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2017",
    "module": "CommonJS",
    "lib": [
      "esnext",
      "es2015",
      "es2017"
    ] /* Specify library files to be included in the compilation. */,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist" /* Redirect output structure to the directory. */,
    "rootDir": "." /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noLib": false,
    "sourceMap": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./src" /* Base directory to resolve non-absolute module names. */,
    // "paths": {},                           /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
    // "rootDirs": [],                        /* List of root folders whose combined content represents the structure of the project at runtime. */
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ] /* List of folders to include type definitions from. */,
    "types": ["node", "jest"],
    "paths": {
      "@core/config": ["./../src/config/config.ts"],
      "@core/db-config": ["./../src/db/config/config.ts"],
      "@core/db": ["./../src/db/index.ts"],
      // "@core/cache": ["./../src/modules/cache"],
      // "@core/queue": ["./../src/modules/queue.ts"],
      "@core/utils": ["./../src/utils/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "jest.config.js", "front-end"]
}
